
  <div id="flexslider">
    <div class="flexslider"><ul class="slides">{% for banner in banners %}
      <li>{% if banner.link %}<a href="{{ banner.link }}"><img src="image/{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" /></a>{% else %}<img src="image/{{ banner.image }}" alt="{{ banner.title }}" />{% endif %}</li>
      {% endfor %}</ul></div>
  </div>
<script type="text/javascript">
$('.flexslider').flexslider({
		animation: "slide",
		easing: "easeInBounce",
		slideshowSpeed: {{ slideshowspeed }},
		animationSpeed: {{ animationspeed }},
        animationLoop: {{ animationloop }},
		pauseOnAction: true,
		pauseOnHover: {{ pausehover }},
		touch: {{ touch }},
		controlNav: {{ controlnav }},
		directionNav: {{ directionnav }},
		maxItems: {{ limit }},
        itemWidth: {{ itemwidth }},
        itemMargin: {{ itemmargin }},
        pausePlay: false
});
</script> 






