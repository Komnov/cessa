<section class="ishiservicesblock clearfix" >
    <div class="container">
        {% if showtitle == 1 %}
            <h3 class="home-title">{{ title }}</h3>
             <p class="sub-title">{{ subtitle }}</p>
        {% endif %}
        <div class="ishiservices" style="background: {{ bg_color }};">
    		{% for ishiservice in ishiservices %}
                <div class="services {{ class }}">
                    <a href="#">
                        <div class="service-img">
                            <span style="background-image: url({{ ishiservice.image }});"></span>
                        </div>
                        <div class="service-block">
                            <div class="service-title">{{ ishiservice.title }}</div>
                            <div class="service-desc">{{ ishiservice.description }}</div>
                        </div>
                    </a>
                </div>
    		{% endfor %}
        </div>
    </div>
</section>
