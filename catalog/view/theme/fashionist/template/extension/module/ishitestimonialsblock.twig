<div class="ishitestimonials col-lg-4 col-sm-12 col-md-12 col-xs-12">
		{% if title %}
			<h2 class="home-title">{{ title }}</h2>
		{% endif %}
		<div id="{{ random_id }}" class="ishitestimonials-container" data-source-url="{{ bgimage }}" style="background-image: url({{ bgimage }})">
			<div class="owl-carousel">				
				{% for ishitestimonial in ishitestimonials %}
					<div class="item">
						<div class="user-details">
							<div class="testimonial-img">
								<img src="{{ ishitestimonial.image }}" alt="{{ ishitestimonial.username }}">
							</div>
							<div class="user-detail">
								<span class="user-name">
									{{ ishitestimonial.username }}
								</span>
								<span class="user-designation">
									{{ ishitestimonial.designation }}
								</span>
								<div class="user-description">
									{{ ishitestimonial.description }}
								</div>
							</div>
						</div>
					</div>
				{% endfor %}				
			</div>
		</div>
	    <script type="text/javascript">  
	        $('#{{ random_id }} .owl-carousel').owlCarousel({
	            loop:true,
	            nav: false,
				dotsClass: 'owl-dots {{ dot_style }}',
	            dots:{{ dot }},
				autoplay:{{ autoplay }},
	            rtl: $('html').attr('dir') == 'rtl'? true : false,
	            navText: ["<i class='fa fa-arrow-left'></i>","<i class='fa fa-arrow-right'></i>"],
	            items:1
	        });
	    </script>
		<style>
			#{{ random_id }}{
				background-color: {{ bgcolor }}
			}
		</style>
</div>