{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
              {% if error_name %}
              <div class="text-danger">{{ error_name }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-banner">{{ entry_banner }}</label>
            <div class="col-sm-10">
              <select name="banner_id" id="input-banner" class="form-control">
                {% for banner in banners %}
                {% if banner.banner_id == banner_id %}
                <option value="{{ banner.banner_id }}" selected="selected">{{ banner.name }}</option>
                {% else %}
                <option value="{{ banner.banner_id }}">{{ banner.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div> 
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-slideshowspeed">{{ entry_slideshowspeed }}</label>
            <div class="col-sm-10">
              <input type="text" name="slideshowspeed" value="{{ slideshowspeed }}" placeholder="{{ entry_slideshowspeed }}" id="input-slideshowspeed" class="form-control" />
              {% if error_slideshowspeed %}
              <div class="text-danger">{{ error_slideshowspeed }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-animationspeed">{{ entry_animationspeed }}</label>
            <div class="col-sm-10">
              <input type="text" name="animationspeed" value="{{ animationspeed }}" placeholder="{{ entry_animationspeed }}" id="input-animationspeed" class="form-control" />
              {% if error_animationspeed %}
              <div class="text-danger">{{ error_animationspeed }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-animationloop">{{ entry_animationloop }}</label>
            <div class="col-sm-10">
              <select name="animationloop" id="input-animationloop" class="form-control">
                {% if animationloop %}
                <option value="1" selected="selected">{{ text_true }}</option>
                <option value="0">{{ text_false }}</option>
                {% else %}
                <option value="1">{{ text_true }}</option>
                <option value="0" selected="selected">{{ text_false }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-touch">{{ entry_touch }}</label>
            <div class="col-sm-10">
              <select name="touch" id="input-touch" class="form-control">
                {% if touch %}
                <option value="1" selected="selected">{{ text_true }}</option>
                <option value="0">{{ text_false }}</option>
                {% else %}
                <option value="1">{{ text_true }}</option>
                <option value="0" selected="selected">{{ text_false }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-pausehover">{{ entry_pausehover }}</label>
            <div class="col-sm-10">
              <select name="pausehover" id="input-pausehover" class="form-control">
                {% if pausehover %}
                <option value="1" selected="selected">{{ text_true }}</option>
                <option value="0">{{ text_false }}</option>
                {% else %}
                <option value="1">{{ text_true }}</option>
                <option value="0" selected="selected">{{ text_false }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-controlnav">{{ entry_controlnav }}</label>
            <div class="col-sm-10">
              <select name="controlnav" id="input-controlnav" class="form-control">
                {% if controlnav %}
                <option value="1" selected="selected">{{ text_true }}</option>
                <option value="0">{{ text_false }}</option>
                {% else %}
                <option value="1">{{ text_true }}</option>
                <option value="0" selected="selected">{{ text_false }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-directionnav">{{ entry_directionnav }}</label>
            <div class="col-sm-10">
              <select name="directionnav" id="input-directionnav" class="form-control">
                {% if directionnav %}
                <option value="1" selected="selected">{{ text_true }}</option>
                <option value="0">{{ text_false }}</option>
                {% else %}
                <option value="1">{{ text_true }}</option>
                <option value="0" selected="selected">{{ text_false }}</option>
                {% endif %}
              </select>
            </div>
          </div>
            
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-limit">{{ entry_limit }}</label>
            <div class="col-sm-10">
              <select name="limit" id="input-limit" class="form-control">
                <option value="1" {% if(limit == 1) %} selected="selected" {% endif %} >1</option>
                <option value="2" {% if(limit == 2) %} selected="selected" {% endif %} >2</option>
                <option value="3" {% if(limit == 3) %} selected="selected" {% endif %} >3</option>
                <option value="4" {% if(limit == 4) %} selected="selected" {% endif %} >4</option>
                <option value="5" {% if(limit == 5) %} selected="selected" {% endif %} >5</option>
              </select>
            </div>
          </div>                  
            
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-itemwidth">{{ entry_itemwidth }}</label>
            <div class="col-sm-10">
              <input type="text" name="itemwidth" value="{{ itemwidth }}" placeholder="{{ entry_itemwidth }}" id="input-itemwidth" class="form-control" />
              {% if error_itemwidth %}
              <div class="text-danger">{{ error_itemwidth }}</div>
              {% endif %}
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-itemmargin">{{ entry_itemmargin }}</label>
            <div class="col-sm-10">
              <input type="text" name="itemmargin" value="{{ itemmargin }}" placeholder="{{ entry_itemmargin }}" id="input-itemmargin" class="form-control" />
              {% if error_itemmargin %}
              <div class="text-danger">{{ error_itemmargin }}</div>
              {% endif %}
            </div>
          </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}